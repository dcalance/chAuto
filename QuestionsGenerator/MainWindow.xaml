<Window x:Class="QuestionsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionsGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="662.426" Width="775.589">
    <Grid Margin="0,0,2,0">
        <Canvas HorizontalAlignment="Left" Height="631" VerticalAlignment="Top" Width="766">
            <Label x:Name="label" Content="Question:" Canvas.Top="10" Height="25" Width="74" Canvas.Left="10"/>
            <TextBox x:Name="questionBox" HorizontalAlignment="Left" Height="89" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Canvas.Left="10" Canvas.Top="35"/>
            <Label x:Name="label1" Content="Image name(leave empty if none):" Canvas.Left="10" Canvas.Top="129"/>
            <TextBox x:Name="imageBox" Height="22" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="155" Width="190"/>
            <Label x:Name="label2" Content="Correct answer number:" Canvas.Left="10" Canvas.Top="182"/>
            <TextBox x:Name="correctAnswerBox" Height="23" TextWrapping="Wrap" Width="190" Canvas.Left="10" Canvas.Top="208"/>
            <Label x:Name="label3" Content="Answer 1:" Canvas.Left="10" Canvas.Top="264"/>
            <TextBox x:Name="answerBox1" Height="20" TextWrapping="Wrap" Width="434" Canvas.Left="10" Canvas.Top="290"/>
            <Button x:Name="addAnswerBtn" Content="Add answer" Width="93" Canvas.Left="253" Canvas.Top="265" Click="addAnswerBtn_Click"/>
            <ListBox x:Name="chaptersList" Height="227" Width="126" Canvas.Left="447" Canvas.Top="35" SelectionChanged="chaptersList_SelectionChanged"/>
            <Label x:Name="label4" Content="Chapters:" Canvas.Left="447" Canvas.Top="9"/>
            <ListBox x:Name="questionsList" Height="227" Width="126" Canvas.Left="608" Canvas.Top="35" SelectionChanged="questionsList_SelectionChanged"/>
            <Label x:Name="label4_Copy" Content="Questions:" Canvas.Left="608" Canvas.Top="9"/>
            <Button x:Name="newChapterBtn" Click="newChapterBtn_Click" Content="New Chapter" Width="90" Canvas.Left="339" Canvas.Top="56"/>
            <Button x:Name="newQuestionBtn" Content="New Question" Width="90" Canvas.Left="339" Canvas.Top="81" Click="newQuestionBtn_Click"/>
            <Button x:Name="saveAsBtn" Content="Save as..." Width="94" Canvas.Left="640" Canvas.Top="290" Click="saveAsBtn_Click"/>
            <Button x:Name="deleteChapterBtn" Content="Delete Chapter" Width="94" Canvas.Left="640" Canvas.Top="315" Click="deleteChapterBtn_Click"/>
            <Button x:Name="deleteQuestionBtn" Content="Delete Question" Width="94" Canvas.Left="640" Canvas.Top="340" Click="deleteQuestionBtn_Click"/>
            <Button x:Name="clearAllBtn" Content="Clear All" Width="94" Canvas.Left="640" Canvas.Top="365" Click="clearAllBtn_Click"/>
            <Button x:Name="upChapterBtn" Content="Up" Width="20" Canvas.Left="578" Canvas.Top="56" Click="upChapterBtn_Click"/>
            <Button x:Name="downChapterBtn" Content="Dw" Width="20" Canvas.Left="578" Canvas.Top="81" Click="downChapterBtn_Click"/>
            <Button x:Name="upQuestionBtn" Content="Up" Width="20" Canvas.Left="739" Canvas.Top="56" Click="upQuestionBtn_Click"/>
            <Button x:Name="downQuestionBtn" Content="Dw" Width="20" Canvas.Left="739" Canvas.Top="81" Click="downQuestionBtn_Click"/>
            <Button x:Name="removeAnswerBtn" Content="Remove answer" Width="92" Canvas.Left="351" Canvas.Top="265" Click="removeAnswerBtn_Click"/>
            <StackPanel x:Name="stackPanel" Height="306" Canvas.Left="10" Canvas.Top="315" Width="434"/>
            <Button x:Name="saveChangesBtn" Content="Save Changes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Canvas.Left="322" Canvas.Top="155" Click="saveChangesBtn_Click"/>

        </Canvas>

    </Grid>
</Window>
